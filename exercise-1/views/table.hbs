<table style="padding: 10px;width:100%">
    <thead>
        <th>Avatar</th>
        <th>Name</th>
    </thead>
    <tbody >

        {{#each data}} 
            <tr style="border:solid 0.5px silver; border-radius:2px;box-shadow:1px 2px 3px 4px silver;padding:10%">
                <td><img style="border-radius: 50%;" src={{avatar}} height="60px" width="60px" alt={{name}}>
                </td>
                <td style="padding: 2%;">{{name}}</td>
                <td id={{id}}><button id={{id}} class="showData">Show Data</button>
                </td>

            </tr>
        {{/each}} 

    </tbody>
</table>
<script src="/public/js/table.js"></script>
